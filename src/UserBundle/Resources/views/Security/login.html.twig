{% extends "UserBundle::layout.html.twig" %}

{% block fos_user_content %}
    {# Registration column #}
    <div class="col-md-4 col-md-offset-2 text-center">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">{{ 'login.register.title'|trans }}</h3>
            </div>
            <div class="panel-body">
                <p>{{ 'login.register.description'|trans }}</p>
                <a class="btn btn-lg btn-primary btn-block" href="{{ path('fos_user_registration_register') }}">
                    {{ 'layout.register'|trans({}, 'FOSUserBundle') }}
                </a>
            </div>
        </div>
    </div>

    {# Login form #}
    <div class="col-md-4 text-center">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</h3>
            </div>
            <div class="panel-body">
                {% include "UserBundle:Security:login_content.html.twig" %}
                <p>
                    <a href="{{ path('fos_user_resetting_request') }}">{{ 'login.forgot_password'|trans }}</a>
                </p>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}
