{% extends "UserBundle::layout.html.twig" %}

{% block fos_user_content %}
    <div class="col-md-8 col-md-offset-2">
        <div class="login-panel register-panel panel panel-default">
            <div class="panel-heading text-center">
                <h3 class="panel-title">{{ 'register.title'|trans }}</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        {% include "UserBundle:Registration:register_content.html.twig" %}
                    </div>
                    <div class="col-lg-6">
                        <h4>{{ 'register.help.cheerup_friend.title'|trans }}</h4>
                        <p>{{ 'register.help.cheerup_friend.description'|trans }}</p>

                        <h4>{{ 'register.help.network_volunteer.title'|trans }}</h4>
                        <p>{{ 'register.help.network_volunteer.description'|trans }}</p>

                        <a href="{{ path('fos_user_security_login') }}">{{ 'register.back_to_login'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}
